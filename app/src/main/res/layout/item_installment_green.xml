<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:paddingTop="2dp"
        android:paddingBottom="2dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/installGreenVIEW"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@drawable/bg_installment_green" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/installGreenDayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="0 6"
            android:textSize="20dp"
            android:textColor="@android:color/holo_orange_dark" />

        <LinearLayout
            android:layout_marginStart="10dp"
            android:id="@+id/installGreenLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:textSize="10sp"
                android:id="@+id/installGreenDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="04.2018" />

            <TextView
                android:textSize="8sp"
                android:textColor="@android:color/white"
                android:paddingStart="5dp"
                android:paddingEnd="4dp"
                android:background="@drawable/bg_installment_day_of_week"
                android:layout_marginStart="5dp"
                android:id="@+id/installGreenWeekDayTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="Amount" />

        <TextView
            android:id="@+id/installGreenAmountTV"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="35dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="$100 / $1000 "/>


        <ImageButton
            android:layout_marginStart="40dp"
            android:id="@+id/installGreenIB"
            android:layout_width="wrap_content"
            android:layout_marginTop="-7dp"
            android:layout_marginBottom="-7dp"
            android:layout_height="match_parent" />



    </LinearLayout>

</android.support.v7.widget.CardView>